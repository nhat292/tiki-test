<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.main.MainActivity">

    <TextView
        android:id="@+id/txt_hot_keywords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/recycler_view_hot_keywords"
        android:layout_marginLeft="@dimen/margin_padding_normal"
        android:layout_marginBottom="@dimen/margin_padding_normal"
        android:text="@string/hot_key"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_normal" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_hot_keywords"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    <TextView
        android:id="@+id/txt_hot_keywords_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/hot_key_empty"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/text_size_normal" />


</RelativeLayout>